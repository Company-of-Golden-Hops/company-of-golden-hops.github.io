<header class="site-header">

    <!-- Logo and title -->
	<div class="branding">
        {% if site.avatar %}
		<a href="{{ '/' | relative_url }}">
			<img alt="logo img" class="avatar" src="{{ site.avatar | relative_url }}" />
		</a>
        {% endif %}
        <a class="site-title" aria-label="{% t global.title %}" href="{{ '/' | relative_url }}">
        {% t global.title %}
		</a>
	</div>

    <!-- Toggle menu -->
    <nav class="clear">
    <a aria-label="pull" id="pull" class="toggle" href="#">
    <i class="fas fa-bars fa-lg"></i>
    </a>

    <!-- Menu -->
    <ul class="hide">
        {% assign name_page = "" %}

        {% for page in site.pages %}
            {% unless page.title == null or page.hide or name_page contains page.title %}
            <li class="separator"> | </li>
            <li>
                <a class="clear" aria-label="{% t page.title %}" title="{% t page.title %}" href="{{ page.url | relative_url }}">
                    {% if page.icon %} <i class="fas {{ page.icon }}" aria-hidden="true"></i>
                    {% else %} {% t page.title %} {% endif%}
                </a>
            </li>
            {% endunless %}
            {% assign name_page = page.title | append: name_page %}
        {% endfor %}
        
        {% if site.color_theme == 'auto' %}
        <li class="separator"> | </li>
        <li><a id="theme-toggle" title="{% t page.title %} " aria-label="{% t page.title %}" onclick="themeToggle()"></a></li>
        {% endif %}
        <li class="separator"> | </li>
        <li> <a id="lang-togglehr" title="hr" aria-label="hr" href="{{ site.baseurl_root }}{{ page.url }}">hr</a></li>
        <li class="separator"> | </li>
        <li> <a id="lang-toggleen" title="en" aria-label="en" href="{{ site.baseurl_root }}/en{{ page.url }}">en</a></li>


    </ul>

	</nav>
</header>
